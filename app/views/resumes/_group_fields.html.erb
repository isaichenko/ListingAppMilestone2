<div class="nested-fields">
	<div class="form-group">
	  <%= f.label :title %>
	  <%= f.text_field :title, class: 'form-control' %>
	</div>

	<h5>Time Period</h5>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :start_date %>
			  <%= f.date_field :start_date, class: 'form-control' %>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :end_date %>
			  <%= f.date_field :end_date, class: 'form-control' %>
			</div>
		</div>
	</div>

	<div class="form-group">
	  <%= f.label :i_am_still_a_member %>
	  <%= f.check_box :i_am_still_a_member %>
	</div>

	<div class="form-group">
	  <%= f.label :description %>
	  <%= f.text_area :description, row: 2, class: 'form-control' %>
	</div>

	<%= link_to_remove_association 'Remove Group', f, class: "badge badge-danger" %>
	<hr>
</div>