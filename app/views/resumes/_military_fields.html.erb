<div class="nested-fields">
	<div class="form-group">
	  <%= f.label :service_country %>
	  <%= f.text_field :service_country, class: 'form-control' %>
	</div> 

	<div class="form-group">
	  <%= f.label :branch %>
	  <%= f.text_field :branch, class: 'form-control' %>
	</div>

	<div class="form-group">
	  <%= f.label :rank %>
	  <%= f.text_field :rank, class: 'form-control' %>
	</div>

	<h5>Time Period</h5>
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :start_date %>
			  <%= f.date_field :start_date, class: 'form-control' %>
			</div>
		</div>

		<div class="col-md-6">
			<div class="form-group">
			  <%= f.label :end_date %>
			  <%= f.date_field :end_date, class: 'form-control' %>
			</div>
		</div>
	</div>

	<div class="form-group">
	  <%= f.label :i_am_currently_serving %>
	  <%= f.check_box :i_am_currently_serving %>
	</div>

	<div class="form-group">
	  <%= f.label :description %>
	  <%= f.text_area :description, row: 2, class: 'form-control' %>
	</div>

	<div class="form-group">
	  <%= f.label :commendations %>
	  <%= f.text_area :commendations, row: 2, class: 'form-control' %>
	</div>

	<%= link_to_remove_association 'Remove Military Service', f, class: "badge badge-danger" %>
	<hr>
</div>