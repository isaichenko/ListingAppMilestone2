<div class="row">
  <div class="col-md-4">
    <%= form_for(job_area) do |form| %>
      <% if job_area.errors.any? %>
        <ul>
          <% job_area.errors.full_messages.each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="form-group">
        <%= form.label "Job Area Title" %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit "Submit", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>
